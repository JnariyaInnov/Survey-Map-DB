<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/InputDialog_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.cdut.kb.klsurvey.SurveyInfoInputDialogFragment">
    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
    <!--android:layout_width="match_parent"-->
    <!-- ScrollView只允许有一个直接子元素 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/BSM"/>
                <EditText
                    android:id="@+id/BSM_value"
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/township"/>
                <EditText
                    android:id="@+id/township_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:imeOptions="flagNoExtractUi"
                    /> <!--android:imeOptions="flagNoExtractUi"在横屏的情况下避免输入法把整个屏幕都覆盖。保证仍然能看到应用程序界面-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/village"
                    />
                <EditText
                    android:id="@+id/village_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/principalOfVillage"/>
                <EditText
                    android:id="@+id/principalOfVillage_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tel"/>
                <EditText
                    android:id="@+id/tel_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:digits="1234567890"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#778899"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number"/>
                <EditText
                    android:id="@+id/number_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/JBNTTBH"/>
                <EditText
                    android:id="@+id/JBNTTBH_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ZM"/>
                <EditText
                    android:id="@+id/ZM_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/XDM"/>
                <EditText
                    android:id="@+id/XDM_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/CBR"/>
                <EditText
                    android:id="@+id/CBR_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/MJ"/>
                <EditText
                    android:id="@+id/MJ_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:digits="1234567890."
                    android:imeOptions="flagNoExtractUi"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GDLX"/>
                <EditText
                    android:id="@+id/GDLX_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remarks"/>
                <EditText
                    android:id="@+id/remarks_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#778899"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/DCR"/>
                <EditText
                    android:id="@+id/DCR_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ZFZR"/>
                <EditText
                    android:id="@+id/ZFZR_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/JLR"/>
                <EditText
                    android:id="@+id/JLR_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#778899"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/takePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="@string/takePhoto"
                    /><!--对话框中按钮的点击事件不能用android:onClick来指定-->
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#778899"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/inputOK"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/inputOK"
                    android:padding="15dp"
                    />
                <Button
                    android:id="@+id/inputCancel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/inputCancel"
                    android:padding="15dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
